{% extends 'seleccion.html.twig' %}

{% block title %}{{ genero[0].nom_genero }}{% endblock %}


    {% block jsonld %}
    <script type="application/ld+json">
                    {
                        "@context":"http://schema.org",
                        "@type": "MusicPlaylist",
                        "name": "{{ genero[0].nom_genero }}",
                        "numTracks": "{{ canciones|length }},
                        "track": [
                        {% for cancion in canciones %}
                        {
                            "@type": "MusicRecording",
                            "name": "{{ cancion.nom_cancion }}"
                        }
                        ,
                        {% endfor %}
                        ]
                    }
     </script>
    {% endblock %}

    {% block srcImagen %}{{ asset(genero[0].img_genero) }}{% endblock %}

    {% block titulo %}{{ genero[0].nom_genero }}{% endblock %}

    {% block tweetTexto %}Me encanta la música {{ genero[0].nom_genero }}! ¿Y a ti?{% endblock %}

    {% block tweetHashtags %}{{ genero[0].nom_genero|replace({' ': ''}) }}{% endblock %}

{% block descripcion %}{{ genero[0].descripcion }}{% endblock %}

